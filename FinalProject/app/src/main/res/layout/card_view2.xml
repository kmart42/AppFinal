<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/buttons"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@drawable/gradient_animiation"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:background="@color/Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/enter_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/display"
        >
        <TextView
            android:layout_weight=".5"
            android:layout_gravity="left"
            android:textColor="@color/HotPink"
            android:shadowColor="@color/KR651"
            android:fontFamily="@font/broadwayd"
            android:shadowRadius="10"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/fname_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/date_view2"
            android:layout_weight=".5"
            android:textColor="@color/HotPink"
            android:shadowColor="@color/Black"
            android:fontFamily="@font/broadwayd"
            android:shadowRadius="10"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
        <TextView
            android:id="@+id/message_view2"

            android:fontFamily="@font/rageitalic"
            android:background="@drawable/gradient_drawable2"
            android:textColor="@color/HotPink"
            android:shadowColor="@color/Black"
            android:shadowRadius="10"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </TextView>


    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:minHeight="?attr/actionBarSize"
    app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    android:background="@drawable/gradient_drawable2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:shadowColor="@color/Black"
        android:fontFamily="@font/broadwayd"
        android:shadowRadius="10"
        android:textSize="28dp"
        android:textColor="@color/HotPink"
        android:text="Home"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="right" >
    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@null"
        android:id="@+id/about_button"
        android:src="@drawable/ic_pinkpeep"/>
    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@null"
        android:id="@+id/view_button"
        android:src="@drawable/ic_pinkpic"/>
    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@null"
        android:id="@+id/master_button"
        android:src="@drawable/ic_action_people_outline"/>
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>
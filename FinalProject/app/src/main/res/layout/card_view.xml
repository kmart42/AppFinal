<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/PaleTurquoise"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="@color/color_white"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:background="@color/GhostWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <ImageView
            android:id="@+id/postImg"
            android:background="@color/PaleTurquoise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ImageView>
        <TextView
            android:id="@+id/fname_view"
            android:fontFamily="@font/rageitalic"
            android:textSize="22sp"
            android:textColor="@color/HotPink"
            android:textStyle="bold"
            android:background="@color/PaleTurquoise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </TextView>
        <TextView
            android:id="@+id/email_view"
            android:fontFamily="@font/rageitalic"
            android:textSize="22sp"
            android:textColor="@color/HotPink"
            android:textStyle="bold"
            android:background="@color/PaleTurquoise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
        android:id="@+id/phone_view"
        android:fontFamily="@font/rageitalic"
        android:textSize="22sp"
        android:textColor="@color/HotPink"
        android:textStyle="bold"
        android:background="@color/PaleTurquoise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/date_view"
            android:fontFamily="@font/rageitalic"
            android:textSize="22sp"
            android:textColor="@color/HotPink"
            android:textStyle="bold"
            android:background="@color/PaleTurquoise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/description"
            android:background="@color/PaleTurquoise"
            android:fontFamily="@font/rageitalic"
            android:textSize="22sp"
            android:textColor="@color/HotPink"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/PaleTurquoise"
            android:id="@+id/category_text"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/PaleTurquoise"
            android:id="@+id/confidence_text"/>
        <View
            android:background="@color/HotPink"
            android:layout_width="match_parent"
            android:layout_height="2dp">

        </View>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/PaleTurquoise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/like_disabled"
                android:id="@+id/likeBtn"
                android:background="@color/PaleTurquoise"
                android:layout_width="15dp"
                android:layout_height="15dp">

            </ImageView>
            <TextView
                android:text=" 0 likes"
                android:background="@color/PaleTurquoise"
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>